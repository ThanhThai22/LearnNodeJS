<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node JS Youtube</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div>
        <h1>Hello ThaiThanh from ejs</h1>
        <!-- <%= dataUser %> -->
        <div class="w3-container">
            <h2>Table Users</h2>
            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%= test %>
                        <% for(let i=0; i < dataUser.length; i++) { %>
                            <tr>
                                <td>
                                    <%= dataUser[i].id %>
                                </td>
                                <td>
                                    <%= dataUser[i].firstname %>
                                </td>
                                <td>
                                    <%= dataUser[i].lastname %>
                                </td>
                                <td>
                                    <button type="button"><a
                                            href="http://localhost:3000/detail/user/<%= dataUser[i].id %>">Detail</a></button>
                                    <button type="button">Edit</button>
                                    <button type="button">Delete</button>
                                </td>
                            </tr>
                            <% } %>
                </tbody>
            </table>
        </div>
        <div class="create-user-container">
            <form action="/create-new-user" method="post">
                <div class=""><b>Create New User:</b> </div><br>
                <div class="d-block">
                    <label for="">First Name: </label>
                    <input type="text" name="firstname" id="">

                    <label for="">Last Name: </label>
                    <input type="text" name="lastname" id="">

                    <label for="">Email: </label>
                    <input type="email" name="email" id="">

                    <label for="">Address: </label>
                    <input type="text" name="address" id="">
                </div>
                <div>
                    <button type="submit" class="btn-submit">Submit</button>
                </div>
            </form>
        </div>
    </div>

</body>

</html>